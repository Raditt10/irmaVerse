generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
  instruktur
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  notelp    String?  // Nomor telepon (opsional)
  address   String?  // Alamat (opsional) 
  bio       String?  // Bio (opsional)
  role      Role     @default(user) // Role: user, admin, instruktur
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
