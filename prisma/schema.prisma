generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum Role {
  user
  admin
  instruktur
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  notelp    String?  // Nomor telepon (opsional)
  address   String?  // Alamat (opsional) 
  bio       String?  // Bio (opsional)
  avatar    String?  // URL foto profil (opsional)
  role      Role     @default(user) // Role: user, admin, instruktur
  lastSeen  DateTime @default(now()) // Last active timestamp
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Dashboard progress fields
  points        Int      @default(0) // Total points
  badges        Int      @default(0) // Total badges
  quizzes       Int      @default(0) // Total quizzes completed
  streak        Int      @default(0) // Current streak (days)
  averageScore  Int      @default(0) // Average quiz score
  level         Int      @default(1) // User level

  // Instruktur profile
  bidangKeahlian String? // Bidang keahlian (hanya untuk instruktur)
  pengalaman     String? // Pengalaman (hanya untuk instruktur)

  // Relations
  newsArticles            News[]             @relation("authorNews")
  userConversations       ChatConversation[] @relation("userConversations")
  instructorConversations ChatConversation[] @relation("instructorConversations")
  sentMessages            ChatMessage[]      @relation("sentMessages")
  schedules               Schedule[]         @relation("instructorSchedules")
  materials               Material[]
  materialInvites         MaterialInvite[]
  courseEnrollments       CourseEnrollment[]

  @@map("users")
}

model News {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  category  String // Prestasi, Kerjasama, Update, Event, Pengumuman
  deskripsi String   @db.Text // Deskripsi singkat dari content
  content   String   @db.LongText // Markdown content
  image     String? // URL gambar berita
  authorId  String
  author    User     @relation("authorNews", fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([authorId])
  @@map("news")
}

// Chat Conversation between User and Instructor
model ChatConversation {
  id           String   @id @default(cuid())
  userId       String // User yang memulai chat
  instructorId String // Instruktur yang di-chat
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User          @relation("userConversations", fields: [userId], references: [id], onDelete: Cascade)
  instructor   User          @relation("instructorConversations", fields: [instructorId], references: [id], onDelete: Cascade)
  messages     ChatMessage[]

  @@unique([userId, instructorId])
  @@index([userId])
  @@index([instructorId])
  @@map("chat_conversations")
}

// Chat Messages
model ChatMessage {
  id             String    @id @default(cuid())
  conversationId String
  senderId       String
  content        String    @db.Text
  isRead         Boolean   @default(false)
  readAt         DateTime? // When message was read
  attachmentUrl  String? // URL for uploaded files/images
  attachmentType String? // Type: image, file, etc
  isEdited       Boolean   @default(false)
  editedAt       DateTime?
  isDeleted      Boolean   @default(false)
  deletedAt      DateTime?
  createdAt      DateTime  @default(now())

  conversation ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User             @relation("sentMessages", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([senderId])
  @@map("chat_messages")
}

enum ScheduleStatus {
  segera_hadir
  ongoing
  completed
}

model Schedule {
  id              String         @id @default(cuid())
  title           String
  description     String         @db.Text
  fullDescription String?        @db.LongText
  date            DateTime
  time            String
  location        String
  pemateri        String
  thumbnailUrl    String?
  status          ScheduleStatus @default(segera_hadir)
  instructorId    String
  instructor      User           @relation("instructorSchedules", fields: [instructorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([instructorId])
  @@index([date])
  @@index([status])
  @@map("schedules")
}

// materials & features required for inviting users
enum InviteStatus {
  pending
  accepted
  rejected
  expired
}

enum Grade {
  X
  XI
  XII
}

enum CourseCategory {
  Wajib
  Extra
  NextLevel
  Susulan
}

enum CourseRole {
  user
  instructor
  assistant
}

model Material {
  id           String  @id @default(cuid())
  title        String
  description  String?
  grade        Grade
  category     CourseCategory
  thumbnailUrl String?
  instructorId String
  nextCourseId String?
  participants String?
  location     String?
  capacity     Int
  date         DateTime   @default(now())
  startedAt    String?

  instructor   User       @relation(fields: [instructorId], references: [id])
  nextCourse   Material?  @relation("CourseChain", fields: [nextCourseId], references: [id])
  prevCourses  Material[] @relation("CourseChain")

  enrollments  CourseEnrollment[]
  invites      MaterialInvite[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MaterialInvite {
  id           String       @id @default(cuid())
  materialId   String
  userId       String
  instructorId String
  token        String       @unique
  status       InviteStatus @default(pending)

  material   Material @relation(fields: [materialId], references: [id], onDelete: Cascade)
  instructor User     @relation(fields: [instructorId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([materialId])
}

model CourseEnrollment {
  id                String     @id @default(cuid())
  materialId        String
  userId            String
  date              DateTime
  time              String
  instructorArrival String
  StartAt           DateTime
  EndTime           DateTime
  role              CourseRole
  enrolledAt        DateTime   @default(now())

  material Material @relation(fields: [materialId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([materialId, userId])
  @@index([userId])
}

model CourseSurvey {
  id             String     @id @default(cuid())
  courseEnrollId String
  userId         String
  rate           String
  relevance      String
  clarity        String
  feedback       String?

  user       User              @relation(fields: [userId], references: [id], onDelete: cascade)
  course     CourseEnrollments @relation(fields: [courseEnrollId], references: [id], onDelete: cascade)
}

model Friendship {
  id       String        @id @default(cuid())
  user1    String
  user2    String

  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}