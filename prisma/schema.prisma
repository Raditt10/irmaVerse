generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum Role {
  user
  admin
  instruktur
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  notelp    String?  // Nomor telepon (opsional)
  address   String?  // Alamat (opsional) 
  bio       String?  // Bio (opsional)
  avatar    String?  // URL foto profil (opsional)
  role      Role     @default(user) // Role: user, admin, instruktur
  lastSeen  DateTime @default(now()) // Last active timestamp
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Dashboard progress fields
  points        Int      @default(0) // Total points
  badges        Int      @default(0) // Total badges
  quizzes       Int      @default(0) // Total quizzes completed
  streak        Int      @default(0) // Current streak (days)
  averageScore  Int      @default(0) // Average quiz score
  level         Int      @default(1) // User level

  // Instruktur profile
  bidangKeahlian String? // Bidang keahlian (hanya untuk instruktur)
  pengalaman     String? // Pengalaman (hanya untuk instruktur)

  // Relations
  newsArticles            News[]             @relation("authorNews")
  userConversations       ChatConversation[] @relation("userConversations")
  instructorConversations ChatConversation[] @relation("instructorConversations")
  sentMessages            ChatMessage[]      @relation("sentMessages")
  schedules               Schedule[]         @relation("instructorSchedules")
  materials               Material[]
  invitesAsInstructor     MaterialInvite[]   @relation("MaterialInviteInstructor")
  invitesAsUser           MaterialInvite[]   @relation("MaterialInviteUser")
  courseEnrollments       CourseEnrollment[]
  competitions            Competition[]      @relation("competitionInstructor")
  notifications           Notification[]     @relation("userNotifications")
  sentNotifications       Notification[]     @relation("senderNotifications")

  // Favorites
  favoritedInstructors  FavoriteInstructor[] @relation("UserFavorites")
  favoritedByUsers      FavoriteInstructor[] @relation("InstructorFavorites")

  @@map("users")
}

model FavoriteInstructor {
  id           String   @id @default(cuid())
  userId       String
  instructorId String
  createdAt    DateTime @default(now())

  user       User @relation("UserFavorites", fields: [userId], references: [id], onDelete: Cascade)
  instructor User @relation("InstructorFavorites", fields: [instructorId], references: [id], onDelete: Cascade)

  @@unique([userId, instructorId])
  @@index([userId])
  @@index([instructorId])
  @@map("favorite_instructors")
}



model News {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  category  String // Prestasi, Kerjasama, Update, Event, Pengumuman
  deskripsi String   @db.Text // Deskripsi singkat dari content
  content   String   @db.LongText // Markdown content
  image     String? // URL gambar berita
  authorId  String
  author    User     @relation("authorNews", fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([authorId])
  @@map("news")
}

// Chat Conversation between User and Instructor
model ChatConversation {
  id           String   @id @default(cuid())
  userId       String // User yang memulai chat
  instructorId String // Instruktur yang di-chat
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User          @relation("userConversations", fields: [userId], references: [id], onDelete: Cascade)
  instructor   User          @relation("instructorConversations", fields: [instructorId], references: [id], onDelete: Cascade)
  messages     ChatMessage[]

  @@unique([userId, instructorId])
  @@index([userId])
  @@index([instructorId])
  @@map("chat_conversations")
}

// Chat Messages
model ChatMessage {
  id             String    @id @default(cuid())
  conversationId String
  senderId       String
  content        String    @db.Text
  isRead         Boolean   @default(false)
  readAt         DateTime? // When message was read
  attachmentUrl  String? // URL for uploaded files/images
  attachmentType String? // Type: image, file, etc
  isEdited       Boolean   @default(false)
  editedAt       DateTime?
  isDeleted      Boolean   @default(false)
  deletedAt      DateTime?
  createdAt      DateTime  @default(now())

  conversation ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User             @relation("sentMessages", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([senderId])
  @@map("chat_messages")
}

enum ScheduleStatus {
  segera_hadir
  ongoing
  completed
}

model Schedule {
  id              String         @id @default(cuid())
  title           String
  description     String         @db.Text
  fullDescription String?        @db.LongText
  date            DateTime
  time            String
  location        String
  pemateri        String
  thumbnailUrl    String?
  status          ScheduleStatus @default(segera_hadir)
  instructorId    String
  instructor      User           @relation("instructorSchedules", fields: [instructorId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([instructorId])
  @@index([date])
  @@index([status])
  @@map("schedules")
}

// materials & features required for inviting users
enum InviteStatus {
  pending
  accepted
  rejected
  expired
}

enum Grade {
  X
  XI
  XII
}

enum CourseCategory {
  Wajib
  Extra
  NextLevel
  Susulan
}

enum CompetitionCategory {
  Tahfidz
  Seni
  Bahasa
  Lainnya
}

enum CourseRole {
  user
  instructor
  assistant
}

model Material {
  id           String  @id @default(cuid())
  title        String
  description  String?
  grade        Grade
  category     CourseCategory
  thumbnailUrl String?
  instructorId String
  nextCourseId String?
  participants String?
  date         DateTime   @default(now())
  startedAt    String?
  
  // New fields for curriculum and content
  parentId     String?
  materialType String?    // "editor" | "link"
  content      String?    @db.LongText
  link         String?

  instructor   User       @relation(fields: [instructorId], references: [id])
  nextCourse   Material?  @relation("CourseChain", fields: [nextCourseId], references: [id])
  prevCourses  Material[] @relation("CourseChain")
  
  // Relations for Curriculum -> Kajian
  parent       Material?  @relation("ProgramMaterials", fields: [parentId], references: [id])
  subMaterials Material[] @relation("ProgramMaterials")

  enrollments  CourseEnrollment[]
  invites      MaterialInvite[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MaterialInvite {
  id           String       @id @default(cuid())
  materialId   String
  instructorId String
  userId       String
  token        String       @unique
  status       InviteStatus @default(pending)

  material   Material @relation(fields: [materialId], references: [id], onDelete: Cascade)
  instructor User     @relation("MaterialInviteInstructor", fields: [instructorId], references: [id])
  user       User     @relation("MaterialInviteUser", fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([materialId])
  @@index([userId])
}

model CourseEnrollment {
  id         String     @id @default(cuid())
  materialId String
  userId     String
  role       CourseRole
  enrolledAt DateTime   @default(now())

  material Material @relation(fields: [materialId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([materialId, userId])
  @@index([userId])
}

model Attendance {
  id         String   @id @default(cuid())
  userId     String
  materialId String
  status     String   @default("hadir") // hadir, tidak, sakit, izin
  
  // Form data
  session    String?
  date       String?
  time       String?
  location   String?
  notes      String?
  reason     String?
  instructorArrival String?
  startTime  String?
  endTime    String?
  
  // Survey data (untuk angket)
  rating     Int?
  clarity    String?
  relevance  String?
  feedback   String? @db.Text
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, materialId])
  @@index([userId])
  @@index([materialId])
}

model Competition {
  id           String                  @id @default(cuid())
  title        String
  description  String?                 @db.Text
  date         DateTime
  prize        String
  category     CompetitionCategory
  thumbnailUrl String?
  instructorId String
  instructor   User                    @relation("competitionInstructor", fields: [instructorId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime                @default(now())
  updatedAt    DateTime                @updatedAt

  @@index([instructorId])
  @@index([date])
  @@map("competitions")
}

// ==========================================
// Universal Notification System
// ==========================================

enum NotificationType {
  basic      // Informational notification (no action required)
  invitation // Invitation that can be accepted or rejected
}

enum NotificationStatus {
  unread
  read
  accepted   // Only for invitation type
  rejected   // Only for invitation type
  expired    // Only for invitation type
}

model Notification {
  id          String             @id @default(cuid())
  userId      String             // Recipient of the notification
  type        NotificationType   @default(basic)
  status      NotificationStatus @default(unread)
  title       String
  message     String             @db.Text
  icon        String?            // Optional icon identifier (e.g. "bell", "book", "trophy")
  
  // Metadata for linking to related resources
  resourceType String?           // e.g. "material", "schedule", "competition", "news"
  resourceId   String?           // ID of the related resource
  actionUrl    String?           // URL to navigate to when clicked
  
  // Invitation-specific fields
  inviteToken  String?  @unique  // Link to MaterialInvite token (for invitation type)
  senderId     String?           // Who triggered this notification
  
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  user   User  @relation("userNotifications", fields: [userId], references: [id], onDelete: Cascade)
  sender User? @relation("senderNotifications", fields: [senderId], references: [id], onDelete: SetNull)

  @@index([userId, status])
  @@index([userId, createdAt])
  @@index([inviteToken])
  @@map("notifications")
}